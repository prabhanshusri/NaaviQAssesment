@model NaaviQ.Models.MarksClass;

    <div class="form-horizontal">
        <form method="post" asp-controller="Student" asp-action="ProcessData">



            <div class="form-group">
                <div>
                    Enter List of Marks of N Students
                </div>
                <div>
                    @Html.TextBox("ListOfMarks", "", new { @id = "ListOfMarks", @class = "form-control" })
                </div>
            </div>
            <br />
            <input type="submit" value="submit" class="btn btn-default" />

        </form>

        <hr />
        <div class="form-group">
            <table class="table">
                <tr>
                    <th> Marks</th>
                    <th> Candies</th>
                </tr>
                @if (Model != null)
                {
                    int total = 0;
                    for (int i = 0; i < Model.markslist.Count - 1; i++)
                    {
                        total += (i + 1);
                        <tr>
                            <td>@Model.markslist[i] </td>
                            <td>@(i + 1) </td>
                        </tr>
                    }
                    <tr>
                        <th> Total</th>
                        <th>@total </th>
                    </tr>

                }
            </table>


        </div>
    </div>
